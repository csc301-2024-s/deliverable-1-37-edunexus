{
  "name": "ls",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "wdio": "wdio run ./wdio.conf.js",
    "package": "electron-builder"
  },
  "build": {
    "appId": "EduNexus",
    "productName": "EduNexus",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./build/entitlements.mac.plist",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
          "width": "400",
          "height": "300"
      },
      "contents": [
          {
              "x": 100,
              "y": 100
          },
          {
              "x": 300,
              "y": 100,
              "type": "link",
              "path": "/Applications"
          }
      ]
  },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "asarUnpack": [
      "dist/assets/edunexus.db"
    ],
    "extraResources": [
      "./"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@wdio/cli": "^8.32.0",
    "@wdio/local-runner": "^8.32.0",
    "@wdio/mocha-framework": "^8.31.1",
    "@wdio/spec-reporter": "^8.31.1",
    "chromedriver": "^121.0.0",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "wdio-electron-service": "^6.3.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "d3": "^7.8.5",
    "electron-is-dev": "^3.0.1",
    "express": "^4.18.2",
    "jsdom": "^24.0.0",
    "mongoose": "^8.1.1",
    "pdfkit": "^0.14.0",
    "pdfkit-table": "^0.1.99",
    "sharp": "^0.32.6",
    "sharp-pdf": "^0.1.3",
    "sqlite3": "^5.1.7",
    "svg-to-pdfkit": "^0.1.8"
  }
}
